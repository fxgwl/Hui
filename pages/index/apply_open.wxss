/* pages/index/apply_open.wxss */
page{
  background-color: #f2f5fa;
}
.apply-form{
  height: 300rpx;
  width: 92%;
  margin: 0 auto;
  margin-top: 20rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
}
.station-name,.user-name{
  border-bottom: 2rpx #f6f6f6 solid;
}
.station-name,.user-name,.user-phone{
  width: 100%;
  height: 100rpx;
  overflow: hidden;
}
.title{
  float: left;
  width: 30%;
  height: 100%;
  font-size: 28rpx;
  color: #333333;
  text-align: right;
  line-height: 100rpx;
}
.input{
  float: right;
  width: 70%;
  height: 100%;
}
.input input{
  display: block;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border: none;
  outline: none;
  font-size: 24rpx;
  line-height: 100rpx;
  text-align: right;
  padding-right: 70rpx;
}
.apply-btn{
  width: 100%;
  height: 98rpx;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #1074bc;
  line-height: 98rpx;
  text-align: center;
  font-size: 30rpx;
  color: #ffffff;

}