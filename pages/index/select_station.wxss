/* pages/index/select_station.wxss */
.container{
  background-color: #f8f8f6;
  overflow: hidden;
}
.select{
  width: 92%;
  height: 86rpx;
  background: url(https://hui.lyhuiqiao.com/upload/image/line1.png) no-repeat;
  background-position: left 38rpx;
  background-size: 7rpx 30rpx;
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  line-height: 106rpx;
  padding-left: 15rpx;
  margin: 0 auto;
}
.station-list-box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.station-list{
  width: 92%;
  height: 170rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  margin: 0 auto;
  margin-top: 20rpx; 
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
}
.station-left{
  width: 86rpx;
  height: 86rpx;
}
.station-left image{
  width: 100%;
  height: 100%;
}
.station-right{
  width: 494rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: url(https://hui.lyhuiqiao.com/upload/image/right.png) no-repeat;
  background-position: right 110rpx;
  background-size: 10rpx 16rpx;
}
.station-date{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.station-name{
  font-size: 28rpx;
  color: #333333;
}
.station-distance{
  font-size: 22rpx;
  color: #1074bc;
}
.station-address{
  font-size: 24rpx;
  color: #333333;
  margin-top: 20rpx;
}
.apply{
  width: 92%;
  height: 170rpx;
  background: #ffffff url(https://hui.lyhuiqiao.com/upload/image/send.png) no-repeat;
  background-position: 216rpx center;
  background-size: 42rpx 42rpx;
  border-radius: 12rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  padding: 0 40rpx;
}
.apply view{
  background: url(https://hui.lyhuiqiao.com/upload/image/right.png) no-repeat;
  background-position: right center;
  background-size: 10rpx 16rpx;
  width: 100%;
  height: 100%;
  line-height: 170rpx;
  font-size: 28rpx;
  color: #333333;
  padding-left: 260rpx;
}
.num_people {
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  /* background: url(https://hui.lyhuiqiao.com/upload/image/logo.png) no-repeat;
  background-position: left center;
  background-size: 40rpx 40rpx; */
  font-size: 30rpx;
  margin: 20rpx 0 0 40rpx;
  box-sizing: border-box;
  position: relative;
}
.num_people image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 120rpx;
  top: 0;
}