page {
  background-color: #23589a;
}
.now_pickup {
  width: 100%;
  height: 96rpx;
  padding: 0 30rpx;
  background-color: #fff;
}
.now_pickup .pickup text:first-child{
  color: #333;
  font-size: 28rpx;
  font-weight: 600;
} 
.now_pickup .pickup text:last-child{
  color: #0d6fb8;
  font-size: 30rpx;
  font-weight: 600;
} 
.now_pickup .sign {
  width: 100rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  background-color: #63b62f;
  border-radius: 20rpx;
  color: #fff;
  font-size: 24rpx;
}

.user {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user .pic {
  width: 180rpx;
  height: 180rpx;
  background: url(https://hui.lyhuiqiao.com/upload/image/my0.png);
  background-repeat: no-repeat;
  background-size: 180rpx 207rpx;
  position: relative;
  margin-top: -38rpx;
}
.user .pic image {
  width: 131rpx;
  height: 131rpx;
  position: absolute;
  bottom: 26rpx;
  right: 25rpx;
  border-radius: 50%;
}
.user .name {
  color: #fff;
  font-size: 26rpx;
}
.con_list {
  padding: 17rpx 30rpx 0rpx;
}
.list {
  padding: 0 25rpx;
  border-radius: 10rpx;
  background-color: rgb(255,255,255,.1);
}
.list_b {
  margin-top: 10rpx;
}
.list_l {
  width: 68rpx;
  height: 68rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.list_l image {
  width: 32rpx;
  height: 32rpx;
}
.list_r {
  width: 550rpx;
  height: 110rpx;
  border-bottom: 4rpx solid rgb(255,255,255,.04);
  color: #fff;
  font-size: 28rpx;
}
.list_r_none {
  border-bottom: none;
}
.list_r image {
  width: 17rpx;
  height: 28rpx;
}


/* 遮罩层 */
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.5;
}

/* 弹出层 */
.modalDlg{
  width: 500rpx;
  height: 520rpx;
  position: fixed;
  top: 150rpx;
  left: 0;
  right: 0;
  z-index: 9999;
  margin: 0 auto;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #333;
  font-weight: 600;
  font-size: 38rpx;
}
.modalDlg image:first-child {
  width: 130rpx;
  height: 130rpx;
  margin-top: -35rpx;
}
.modalDlg image:nth-child(2) {
  width: 290rpx;
  height: 290rpx;              
  margin: 30rpx 0 5rpx 0;
}
.modalDlg .phone {
  color: #0d6fb8;
}
/* 弹出层里面的按钮 */
.modalDlg .ok {
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  right: 12rpx;
  top: 12rpx;
}
.eatbox {
  width: 600rpx;
  height: 600rpx;
  border-radius: 20rpx;
}
.eatbox .head {
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
}
.eatbox textarea {
  width: 540rpx;
  height: 370rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  border: 2rpx solid #dfdfdf;
  margin: 0 auto;
  font-weight: 500;
  font-size: 26rpx;
}
.eatbox .ok {
  top: 30rpx;
  right: 30rpx;
}
.eatbox .last {
  display: block;
  width: 260rpx;
  height: 75rpx;
  line-height: 75rpx;
  text-align: center;
  border-radius: 40rpx;
  background-color: #1074bc;
  margin: 30rpx auto 0;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
}