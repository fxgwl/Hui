page {
  background-color: #f2f5fa;
  padding-top: 102rpx;
  box-sizing: border-box;
}
.top_nav{
  width: 100%;
  height: 82rpx;
  padding: 0 10rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  box-shadow: 0 0rpx 10rpx rgba(125, 125, 125, .2);
}
.nav-name{
  height: 82rpx;
  line-height: 82rpx;
  display: inline-block;
  width: 100%;
  color: #333;
  font-size: 30rpx;
  text-align: center;
}
.nav-hover{
  color: #1074bc;
  background: url(https://hui.lyhuiqiao.com/upload/image/line2.png);
  background-repeat: no-repeat;
  background-size: 70% 5rpx;
  background-position: bottom center;
}
.item_nav {
  padding: 0 30rpx;
}
.kind_item {
  width: 100%;
  height: 455rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}
.con1 {
  height: 85rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  border-bottom: 2rpx solid #efefef;
  padding: 0 28rpx;
}
.con1_l image {
  width: 10rpx;
  height: 17rpx;
  margin-left: 20rpx;
}
.con1_r1 {
  color: #fe2828;
}
.con1_r23 {
  color: #1074bc;
}
.con1_r4 {
  color: #a9a9a9;
}
.con2 {
  height: 200rpx;
  border-bottom: 2rpx solid #efefef;
  padding: 0 27rpx 0 40rpx;
  overflow: hidden;
}
.con2_l {
  height: 120rpx;
  display: flex;
  flex-direction: row;
}
.con2_l .kind {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
}
.con2_l image {
  width: 100%;
  height: 100%;
}
.con2_l .kind:last-child {
  margin-right: 0rpx;
}
.con2_l .number {
  width: 22rpx;
  height: 22rpx;
  line-height: 22rpx;
  text-align: center;
  background-color: #1074bc;
  border-radius: 50%;
  position: absolute;
  right: -11rpx;
  top: -11rpx;
  color: #fff;
  font-size: 20rpx;
}
.con2_r {
  width: 50rpx;
  height: 120rpx;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  color: #fff;
  background-color: #1074bc;
  font-size: 22rpx;
  text-align: center;
  padding: 0 10rpx;
  box-sizing: border-box;
}
.con3 {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.con3_t {
  height: 84rpx;
  color: #535353;
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.con3_t .price {
  font-size: 27rpx;
  margin: 0 28rpx 0 26rpx;
}
.con3_t .price text:nth-child(2),.con3_t .price text:nth-child(3) {
  color: #1074bc;
  font-weight: 600;
}
.con3_b1 {
  width: 210rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #1074bc;
  margin-right: 28rpx;
}
.con3_b1 text:first-child {
  margin-right: 5rpx;
  box-sizing: border-box;
}
.con3_b2 text {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: #1074bc;
  display: inline-block;
}
.con3_b2 navigator {
  display: inline-block;
}
.con3_b2 .apply {
  color: #999;
  line-height: 54rpx;
  background-color: #fff;
  border: 2rpx solid #999;
  box-sizing: border-box;
  margin-left: 16rpx;
}
.con3_b2 text:last-child {
  margin: 0 28rpx 0 16rpx;
}